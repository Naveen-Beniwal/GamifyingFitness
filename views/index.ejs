  <body>
    <!-- Navbar -->
    <nav>
      <div class="logo">
        <h1>FitLife India</h1>
      </div>
      <ul>
        <li><a href="/profile">Profile</a></li>
        <li><a href="/login">Login</a></li>
        <li><a href="/friends">Friends</a></li>
        <li><a href="/exercises">Exercises</a></li>
        <li><a href="/videos">Tutorials</a></li>
        <li><a href="/explore">Explore</a></li>
        <li><a href="/gym">Gyms</a></li>
      </ul>
    </nav>

    <!-- Hero Section -->
    <header class="hero">
      <div class="hero-content">
        <h1>Your Fitness Journey Starts Here</h1>
        <p>
          Track your progress, stay motivated, and reach your fitness goals with
          personalized workouts.
        </p>
        <a href="/login"><button class="cta-button">Get Started</button></a>
      </div>
    </header>

    <!-- Fitness Stats Section -->
    <section class="stats">
      <h2>Your Fitness Stats</h2>
      <div class="stats-container">
        <div class="stat-box">
          <h3>Total Steps</h3>
          <p><span id="steps">0</span> steps</p>
        </div>
        <div class="stat-box">
          <h3>Running Speed</h3>
          <p><span id="speed">0</span> km/h</p>
        </div>
      </div>
    </section>

    <!-- Exercise Videos Section -->
    <section class="videos">
      <h2>Exercise Videos for Busy Schedules</h2>
      <div class="video-grid">
        <div class="video-card">
          <video controls>
            <source src="" type="video/mp4" />
          </video>
          <p>Full Body Workout</p>
        </div>

        <div class="video-card">
          <video controls>
            <source src="" type="video/mp4" />
          </video>
          <p>Core Strengthening</p>
        </div>

        <div class="video-card">
          <video controls>
            <source src="" type="video/mp4" />
          </video>
          <p>Yoga for Relaxation</p>
        </div>
      </div>
    </section>

    <!-- Footer -->
    <footer>
      <p>&copy; 2024 FitLife India. All rights reserved.</p>
    </footer>

    <script src="/javascripts/homePage.js"></script>
  </body>
